<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="TestManagerEntity">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.hiberdata.databasehiber.domain.TEST_SPR</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/testhiber"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="user"/>
            <property name="javax.persistence.jdbc.password" value="0000"/>
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>